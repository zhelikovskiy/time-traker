{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"jsx": "preserve",
		"moduleResolution": "node",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"paths": {
			"*": ["node_modules/*"]
		}
	}
}
